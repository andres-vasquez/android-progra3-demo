<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="@dimen/toolbar"
            android:layout_height="@dimen/toolbar"
            android:src="@drawable/navigation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/queue"
            android:layout_toEndOf="@+id/navigation"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/text"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/subtitle"
                android:textColor="@color/text"
                android:textSize="@dimen/subtitle" />
        </LinearLayout>

        <ImageView
            android:id="@+id/queue"
            android:layout_width="@dimen/toolbar"
            android:layout_height="@dimen/toolbar"
            android:layout_alignParentEnd="true"
            android:src="@drawable/queue" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/musicControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/shuffle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:padding="@dimen/space_xs"
            android:src="@drawable/shuffle" />

        <ImageView
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:padding="@dimen/space_xs"
            android:src="@drawable/previous" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:padding="@dimen/space_xs"
            android:src="@drawable/pause" />


        <ImageView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:padding="@dimen/space_xs"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/repeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:padding="@dimen/space_xs"
            android:src="@drawable/repeat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/musicControls"
        android:layout_marginBottom="@dimen/space_md"
        android:orientation="vertical"
        android:padding="@dimen/space_md">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar"
            android:layout_marginTop="@dimen/space_lg"
            android:layout_marginBottom="@dimen/space_lg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plus"
                android:layout_width="@dimen/toolbar"
                android:layout_height="@dimen/toolbar"
                android:src="@drawable/plus" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/info"
                android:layout_toEndOf="@+id/plus"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/songName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/songName"
                    android:textColor="@color/text"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/songArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/songArtist"
                    android:textColor="@color/text"
                    android:textSize="@dimen/subtitle" />
            </LinearLayout>

            <ImageView
                android:id="@+id/info"
                android:layout_width="@dimen/toolbar"
                android:layout_height="@dimen/toolbar"
                android:layout_alignParentEnd="true"
                android:src="@drawable/info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:textColor="@color/text"
                android:text="00:13"
                tools:text="00:13" />

            <TextView
                android:id="@+id/progressDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text"
                android:text="03:25"
                tools:text="03:25" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_lg"
                android:layout_marginEnd="@dimen/space_lg"
                android:layout_toStartOf="@id/progressDuration"
                android:layout_toEndOf="@id/progress" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/songInfo"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/cover" />
</RelativeLayout>